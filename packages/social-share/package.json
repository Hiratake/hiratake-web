{
  "name": "@hiratake/social-share",
  "version": "1.0.2",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "keywords": [
    "vue"
  ],
  "homepage": "https://github.com/Hiratake/hiratake-web/tree/main/packages/social-share",
  "bugs": "https://github.com/Hiratake/hiratake-web/issues",
  "contributors": [
    {
      "name": "Hiratake",
      "url": "https://hiratake.dev/"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Hiratake/hiratake-web.git"
  },
  "main": "dist/social-share.umd.js",
  "module": "dist/social-share.es.js",
  "types": "dist/types/main.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/main.d.ts",
      "import": "./dist/social-share.es.js",
      "require": "./dist/social-share.umd.js"
    }
  },
  "dependencies": {
    "@vueuse/core": "10.3.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "4.2.3",
    "eslint": "8.46.0",
    "eslint-config-custom": "workspace:*",
    "rimraf": "5.0.1",
    "stylelint": "15.10.2",
    "stylelint-config": "workspace:*",
    "tsconfig": "workspace:*",
    "typescript": "5.1.6",
    "vite": "4.4.7",
    "vue": "3.3.4",
    "vue-tsc": "1.8.8"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "scripts": {
    "build": "vue-tsc -p tsconfig.build.json && vite build",
    "lint": "pnpm lint:script && pnpm lint:style",
    "lint:fix": "pnpm lint:script:fix && pnpm lint:style:fix",
    "lint:script": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue",
    "lint:script:fix": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue --fix",
    "lint:style": "stylelint \"src/**/*.{css,scss,vue}\"",
    "lint:style:fix": "stylelint \"src/**/*.{css,scss,vue}\" --fix",
    "typecheck": "pnpm typecheck:node && pnpm typecheck:web",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "prebuild": "pnpm typecheck && rimraf dist",
    "prepublishOnly": "pnpm build",
    "postinstall": "pnpm build"
  }
}
