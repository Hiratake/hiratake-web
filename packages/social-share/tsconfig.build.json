{
  "extends": ["tsconfig/web.json"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "outDir": "dist/types",
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": "src",
    "types": ["vite/client"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}
