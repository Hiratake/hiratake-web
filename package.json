{
  "name": "hiratake-web-monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@8.14.1",
  "engines": {
    "node": ">=18.12.0"
  },
  "volta": {
    "node": "20.11.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.1",
    "@commitlint/cli": "18.5.0",
    "@commitlint/config-conventional": "18.5.0",
    "eslint": "8.56.0",
    "eslint-config-custom": "workspace:*",
    "husky": "9.0.6",
    "lint-staged": "15.2.0",
    "mkarticle": "workspace:*",
    "prettier": "3.2.4",
    "prettier-plugin-tailwindcss": "0.5.11",
    "stylelint": "16.2.0",
    "stylelint-config": "workspace:*",
    "textlint": "13.4.1",
    "textlint-filter-rule-allowlist": "4.0.0",
    "textlint-rule-preset-custom": "workspace:*",
    "turbo": "1.11.3"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "pnpm --filter hiratake-web dev",
    "generate": "pnpm --filter hiratake-web generate",
    "make": "mkarticle create",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "content": "textlint \"**/*.md\"",
    "content:fix": "textlint \"**/*.md\" --fix",
    "format": "prettier \"**/!(*.md)\" -wu",
    "test": "turbo run test",
    "changeset:version": "changeset version",
    "changeset:release": "changeset publish",
    "prepare": "husky install",
    "preview": "pnpm --filter hiratake-web preview"
  }
}
