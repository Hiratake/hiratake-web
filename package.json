  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Hiratake/hiratake-web.git"
  },
  "type": "module",
  "packageManager": "pnpm@10.6.3",
  "engines": {
    "node": ">=20.9.0"
  },
  "volta": {
    "node": "22.14.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "better-sqlite3",
      "esbuild",
      "lefthook"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@egoist/tailwindcss-icons": "1.9.0",
    "@fontsource/lexend": "5.2.5",
    "@fontsource/noto-sans-jp": "5.2.5",
    "@fontsource/source-code-pro": "5.2.5",
    "@headlessui/tailwindcss": "0.2.2",
    "@headlessui/vue": "1.7.23",
    "@hiratake/textlint-rule-front-matter": "1.1.2",
    "@hiratake/textlint-rule-space-around-bold": "1.0.4",
    "@iconify-json/ph": "1.2.2",
    "@iconify-json/simple-icons": "1.2.28",
    "@nuxt/content": "3.1.1",
    "@nuxt/eslint": "1.2.0",
    "@nuxtjs/seo": "3.0.1",
    "@nuxtjs/tailwindcss": "6.13.2",
    "@tailwindcss/typography": "0.5.16",
    "@textlint-rule/textlint-rule-no-unmatched-pair": "2.0.4",
    "@vueuse/core": "13.0.0",
    "@vueuse/nuxt": "13.0.0",
    "autoprefixer": "10.4.21",
    "eslint": "9.22.0",
    "feed": "4.2.2",
    "h3": "1.15.1",
    "lefthook": "1.11.3",
    "nuxt": "3.16.0",
    "postcss": "8.5.3",
    "prettier": "3.5.3",
    "prettier-plugin-tailwindcss": "0.6.11",
    "tailwindcss": "3.4.17",
    "textlint": "14.5.0",
    "textlint-filter-rule-allowlist": "4.0.0",
    "textlint-filter-rule-comments": "1.2.2",
    "textlint-rule-ja-space-around-code": "2.4.2",
    "textlint-rule-ja-space-around-link": "2.4.2",
    "textlint-rule-ja-space-between-half-and-full-width": "2.4.2",
    "textlint-rule-no-mixed-zenkaku-and-hankaku-alphabet": "1.0.1",
    "typescript": "5.8.2",
    "ufo": "1.5.4",
    "vue": "3.5.13",
    "vue-router": "4.5.0",
    "vue-tsc": "2.2.8"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "lint": "pnpm lint:script && pnpm lint:text",
    "lint:fix": "pnpm lint:script:fix && pnpm lint:text:fix",
    "lint:script": "eslint \"**/*.{js,cjs,mjs,ts,cts,mts,vue}\"",
    "lint:script:fix": "eslint \"**/*.{js,cjs,mjs,ts,cts,mts,vue}\" --fix",
    "lint:text": "textlint \"**/*.md\"",
    "lint:text:fix": "textlint \"**/*.md\" --fix",
    "typecheck": "nuxt typecheck",
    "format": "prettier \"**/!(*.md)\" -wu",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare"
  }
}
