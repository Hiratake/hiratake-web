{
  "name": "hiratake-web-monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@8.7.6",
  "engines": {
    "node": ">=16.14.0"
  },
  "volta": {
    "node": "20.7.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.2",
    "@commitlint/cli": "17.7.1",
    "@commitlint/config-conventional": "17.7.0",
    "eslint": "8.50.0",
    "eslint-config-custom": "workspace:*",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "mkarticle": "workspace:*",
    "prettier": "3.0.3",
    "prettier-plugin-tailwindcss": "0.5.4",
    "stylelint": "15.10.3",
    "stylelint-config": "workspace:*",
    "textlint": "13.3.3",
    "textlint-filter-rule-allowlist": "4.0.0",
    "textlint-rule-preset-custom": "workspace:*",
    "turbo": "1.10.14"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "pnpm --filter hiratake-web dev",
    "generate": "pnpm --filter hiratake-web generate",
    "make": "mkarticle create",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "content": "textlint \"**/*.md\"",
    "content:fix": "textlint \"**/*.md\" --fix",
    "format": "prettier \"**/!(*.md)\" -wu",
    "test": "turbo run test",
    "changeset:version": "changeset version",
    "changeset:release": "changeset publish",
    "prepare": "husky install",
    "preview": "pnpm --filter hiratake-web preview"
  }
}
